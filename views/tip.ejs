<%- include('partials/header') %>

<main class="container py-5">
  <div class="text-center text-white mb-5">
    <h1 class="fw-bold">Kirim Tip Poin</h1>
    <p class="text-white-50">Berikan apresiasi kepada pengguna lain dengan mengirimkan poin.</p>
  </div>

  <div class="row g-4">
    <div class="col-lg-5">
      <div class="card bg-dark text-white h-100 shadow rounded-3 border-0">
        <div class="card-body p-4">
          <h5 class="card-title text-light fw-bold mb-4">Formulir Tip</h5>
          
          <form action="/tip" method="POST">
            <div class="mb-3">
              <label for="username_penerima" class="form-label text-white-50">Username Penerima</label>
              <div class="input-group">
                <span class="input-group-text bg-dark text-light border-secondary">@</span>
                <input type="text" name="username_penerima" class="form-control form-control-lg bg-dark text-white border-secondary" placeholder="Nama pengguna..." required>
              </div>
            </div>

            <div class="mb-4">
              <label for="jumlah_point" class="form-label text-white-50">Jumlah Poin</label>
              <input type="number" name="jumlah_point" class="form-control form-control-lg bg-dark text-white border-secondary" placeholder="Jumlah..." min="1" required>
              <div class="form-text text-white-50 mt-2">Saldo Anda: <%= user.points.toLocaleString('id-ID') %> Poin</div>
            </div>
            
            <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold">
              <i class="bi bi-send-fill me-2"></i> Kirim Tip
            </button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-lg-7">
      <div class="card bg-dark text-white h-100 shadow rounded-3 border-0">
        <div class="card-body p-4">
          <h5 class="card-title fw-bold mb-4">Riwayat Tip Terakhir</h5>
          <% if (history.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-dark table-hover align-middle">
                <thead>
                  <tr>
                    <th>Waktu</th>
                    <th>Transaksi</th>
                    <th class="text-end">Jumlah</th>
                  </tr>
                </thead>
                <tbody>
                  <% history.forEach(tip => { %>
                    <tr>
                      <td class="text-white-50 small"><%= new Date(tip.created_at).toLocaleString("id-ID") %></td>
                      <td>
                        <% if (tip.sender_id === user.id) { %>
                          <span class="text-danger">Anda</span> mengirim ke <span class="text-primary"><%= tip.recipient_username %></span>
                        <% } else { %>
                          <span class="text-success">Anda</span> menerima dari <span class="text-primary"><%= tip.sender_username %></span>
                        <% } %>
                      </td>
                      <td class="text-end fw-bold <%= tip.sender_id === user.id ? 'text-danger' : 'text-success' %>">
                        <%= tip.sender_id === user.id ? '-' : '+' %><%= tip.amount.toLocaleString('id-ID') %>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="text-center p-5">
              <i class="bi bi-receipt fs-1 text-secondary"></i>
              <p class="text-white-50 mt-3">Belum ada riwayat tip.</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') %>