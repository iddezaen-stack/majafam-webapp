<%- include('../partials/header-admin') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 col-lg-2 admin-sidebar text-white vh-100 p-3">
            <%- include('sidebar') %>
        </div>

        <div class="col-md-9 col-lg-10 p-4">
            <h2 class="mb-4 text-white">Pilih Pemenang: <%= raffleTitle %></h2>

            <a href="/admin/raffles" class="btn btn-secondary mb-4">
                <i class="bi bi-arrow-left me-2"></i> Kembali ke Daftar Raffles
            </a>

            <div class="card shadow-lg border-0 bg-dark text-white">
                <div class="card-body">
                    <h5 class="card-title mb-4 border-bottom border-secondary pb-2">
                        Daftar Peserta (<%= entries.length %> Total)
                    </h5>
                    
                    <form action="/admin/raffles/<%= raffleId %>/set-winner" method="POST">
                        <div class="table-responsive">
                            <table class="table table-dark table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th>Pilih</th>
                                        <th>Username</th>
                                        <th>Email</th>
                                        <th>Waktu Gabung</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (entries.length > 0) { %>
                                        <% entries.forEach(entry => { %>
                                            <tr>
                                                <td>
                                                    <input type="radio" 
                                                           name="winner_id" 
                                                           value="<%= entry.user_id %>" 
                                                           required
                                                           class="form-check-input bg-info border-info">
                                                </td>
                                                <td><%= entry.username %></td>
                                                <td><%= entry.email %></td>
                                                <td><%= entry.entry_time.toLocaleString('id-ID', { year: 'numeric', month: 'short', day: 'numeric', hour: '2-digit', minute: '2-digit' }) %></td>
                                            </tr>
                                        <% }) %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="4" class="text-center">Belum ada peserta yang mendaftar.</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="d-grid mt-4">
                            <button type="submit" 
                                    class="btn btn-lg btn-success" 
                                    <%= entries.length === 0 ? 'disabled' : '' %>
                                    onclick="return confirm('ANDA YAKIN? Pemenang yang sudah dipilih tidak dapat diubah lagi.');">
                                Tetapkan Pemenang yang Dipilih
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
