<%- include('../partials/header-admin') %>

<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-3 col-lg-2">
      <%- include('sidebar') %>
    </div>

    <!-- Main Content -->
    <main class="col-md-9 col-lg-10 p-4">
      <h2 class="mb-4">Kelola Claim Code</h2>

      <!-- Form Tambah Claim Code -->
      <div class="card bg-dark text-white shadow-sm mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
          <span>Tambah Claim Code</span>
        </div>
        <div class="card-body">
          <form action="/admin/claim-code/new" method="POST" class="row g-3">
            <div class="col-md-4">
              <label class="form-label">Kode</label>
              <input type="text" name="code" class="form-control bg-dark text-white border-secondary" required>
            </div>
            <div class="col-md-4">
              <label class="form-label">Jumlah Point</label>
              <input type="number" name="points" class="form-control bg-dark text-white border-secondary" required>
            </div>
            <div class="col-md-4 d-flex align-items-end">
              <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-plus-circle me-1"></i> Tambah
              </button>
            </div>
          </form>
        </div>
      </div>

      <!-- Daftar Claim Codes -->
      <div class="card bg-dark text-white shadow-sm">
        <div class="card-header">Daftar Claim Codes</div>
        <div class="table-responsive">
          <table class="table table-dark table-hover align-middle mb-0">
            <thead>
              <tr>
                <th>Kode</th>
                <th>Poin</th>
                <th>Status</th>
                <th>Dibuat</th>
                <th>Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% if (codes.length > 0) { %>
                <% codes.forEach(c => { %>
                  <tr>
                    <td><%= c.code %></td>
                    <td><%= c.points %></td>
                    <td>
                      <% if (c.redeemed) { %>
                        <span class="badge bg-danger">Sudah Dipakai</span>
                      <% } else { %>
                        <span class="badge bg-success">Aktif</span>
                      <% } %>
                    </td>
                    <td><%= new Date(c.created_at).toLocaleString() %></td>
                    <td>
                      <form action="/admin/claim-code/<%= c.id %>/delete" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-danger">
                          <i class="bi bi-trash"></i> Hapus
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="5" class="text-center text-muted">Belum ada Claim Code</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </main>
  </div>
</div>

</body>
</html>
