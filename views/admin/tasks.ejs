<%- include('../partials/header-admin') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 col-lg-2 admin-sidebar text-white vh-100 p-3">
            <%- include('sidebar') %>
        </div>

        <div class="col-md-9 col-lg-10 p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-white">Kelola Tugas</h2>
                <a href="/admin/tasks/new" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i> Tambah Tugas
                </a>
            </div>

            <div class="card bg-dark shadow-lg border-0 rounded-4">
                <div class="card-body p-0">
                    <% if (tasks && tasks.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-dark table-hover align-middle mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Judul</th>
                                        <th>Deskripsi</th>
                                        <th>Reward</th>
                                        <th>Jenis</th> <th>Status</th>
                                        <th>Dibuat</th>
                                        <th>Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% tasks.forEach((t, i) => { %>
                                        <tr>
                                            <td><%= i + 1 %></td>
                                            <td><%= t.title %></td>
                                            <td><%= t.description %></td>
                                            <td><%= t.reward %> Poin</td>
                                            
                                            <td>
                                                <span class="badge <%= t.task_type === 'manual' ? 'bg-warning text-dark' : 'bg-info' %>">
                                                    <%= t.task_type.toUpperCase() %>
                                                </span>
                                            </td>
                                            
                                            <td>
                                                <span class="badge <%= t.status === 'active' ? 'bg-success' : 'bg-secondary' %>">
                                                    <%= t.status %>
                                                </span>
                                            </td>
                                            <td><%= new Date(t.created_at).toLocaleDateString("id-ID") %></td>
                                            <td>
                                                <a href="/admin/tasks/<%= t.id %>/edit" class="btn btn-sm btn-warning me-1">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>
                                                <form method="POST" action="/admin/tasks/<%= t.id %>/delete" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Yakin hapus tugas ini?')">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <p class="text-muted text-center p-4 mb-0">Belum ada tugas.</p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
